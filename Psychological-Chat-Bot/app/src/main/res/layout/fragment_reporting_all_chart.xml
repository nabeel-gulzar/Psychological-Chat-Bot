<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ReportingAllEmotionFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll_reporting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_anger"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_disgust"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_fear"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_joy"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_sadness"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/graph_surprise"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>